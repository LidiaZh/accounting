<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="accounting">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>accounting.entity.Equipment</class>
        <class>accounting.entity.EquipmentDetail</class>
        <class>accounting.entity.Invoice</class>
        <class>accounting.entity.Branch</class>
        <class>accounting.entity.Supplier</class>
        <class>accounting.entity.Receiver</class>
        <class>accounting.entity.ResponsiblePerson</class>
        <class>accounting.entity.Department</class>
        <class>accounting.entity.Admin</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:h2:mem:test?createDatabaseIfNotExist = true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>
    </persistence-unit>
</persistence>