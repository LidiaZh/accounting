<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="accounting">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>accounting.entity.Equipment</class>
        <class>accounting.entity.EquipmentDetail</class>
        <class>accounting.entity.Invoice</class>
        <class>accounting.entity.Branch</class>
        <class>accounting.entity.Supplier</class>
        <class>accounting.entity.Receiver</class>
        <class>accounting.entity.ResponsiblePerson</class>
        <class>accounting.entity.Department</class>
        <class>accounting.entity.Admin</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/accounting?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
<!--            <property name="hibernate.event.merge.entity_copy_observer" value="allow"/>-->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>
    </persistence-unit>
</persistence>